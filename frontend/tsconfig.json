{
  "compilerOptions": {
    /* Base Options */
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,

    /* Module Options */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* JSX Options */
    "jsx": "react-jsx"
  },
  "include": ["src"], // Tell TypeScript to only look at files inside the 'src' folder
  "references": [{ "path": "./tsconfig.node.json" }] // This is for Vite's config files
}